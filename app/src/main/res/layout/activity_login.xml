<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/auth_btn_layout"
        android:layoutAnimation="@anim/layout_animation_from_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium"
        android:layout_alignParentBottom="true">
            <FrameLayout
                android:id="@+id/FrameLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium">

           <!-- <Button
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/sign_in_facebook"
                android:background="@drawable/fb_btn_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/continue_with_facebook"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold" />-->
        </FrameLayout>
      <!--  <Button
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_in_button"
            android:background="@drawable/google_btn_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium"
            android:layout_marginTop="@dimen/small"
            android:layout_marginRight="@dimen/medium"
            android:text="@string/continue_with_google"
            android:fontFamily="@font/roboto_bold" />-->
        <Button
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_in_truecaller"
            android:background="@drawable/mob_btn_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium"
            android:layout_marginTop="@dimen/small"
            android:layout_marginRight="@dimen/medium"
            android:text="@string/continue_with_mobile"
            android:fontFamily="@font/roboto_bold" />
        <TextView
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:id="@+id/signup_terms_lable"
            android:padding="@dimen/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large"
            android:layout_marginTop="@dimen/small"
            android:layout_marginRight="@dimen/large"
            android:fontFamily="@font/poppins_light" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/continue_with_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginBottom="@dimen/small"
        android:layout_above="@id/auth_btn_layout">
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#ff414545"
            android:id="@+id/continue_with_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            android:text="@string/continue_With"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_light" />
        <View
            android:background="@color/divider"
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_toLeftOf="@id/continue_with_lable"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/continue_with_lable" />
        <View
            android:background="@color/divider"
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_toRightOf="@id/continue_with_lable"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/continue_with_lable" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/place_holder_signup_opt_screen_l"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/continue_with_layout"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/place_holder_signup_opt_screen"
            android:padding="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/social_login_image"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>