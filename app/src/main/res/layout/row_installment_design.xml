<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:weightSum="3"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/backkground_loan_installment"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_loans_drawer"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="2.3"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Installment 1"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Amount to Pay  ₹1500"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Last Date 26 Sept 2020"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Payment Status - Due"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Insallment overDue by 9 Days "
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/red"
                    android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Panalty Charge ₹50 "
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_50sdp"
                android:text="pay"
                android:background="@drawable/background_blue_curved"
                android:textSize="@dimen/_9sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>